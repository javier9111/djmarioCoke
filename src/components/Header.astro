---
import '../styles/header.css';

const navLinks = [
  { name: 'Galer√≠a', href: '#galeria' },
  { name: 'Servicios', href: '#servicios' },
  { name: 'Testimonios', href: '#testimonios' },
  { name: 'Contacto', href: '#contacto' },
];
---

<header class="fixed w-full bg-black bg-opacity-90 z-50">
  <nav class="flex items-center justify-between px-4 py-3 sm:px-6">
    <a href="#" class="text-2xl font-bold text-purple-500">DJ <span class="text-white">Coca</span></a>
    
    <div class="hidden md:flex md:items-center md:space-x-8" id="nav-links">
      {navLinks.map((link) => (
        <a href={link.href} class="text-white hover:text-purple-400 " data-astro-transition="animate">{link.name}</a>
      ))}
    </div>
    
    <button class="md:hidden text-white" id="menu-button">
      <svg id="menu-open-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <svg id="menu-close-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('menu-button');
  const navLinks = document.getElementById('nav-links');
  const menuOpenIcon = document.getElementById('menu-open-icon');
  const menuCloseIcon = document.getElementById('menu-close-icon');

  if (menuButton && navLinks && menuOpenIcon && menuCloseIcon) {
    menuButton.addEventListener('click', () => {
      navLinks.classList.toggle('hidden');
      navLinks.classList.toggle('mobile-menu');
      menuOpenIcon.classList.toggle('hidden');
      menuCloseIcon.classList.toggle('hidden');
    });
  }
</script> 